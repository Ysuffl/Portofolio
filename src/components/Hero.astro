---
import {
    Github,
    Linkedin,
    Twitter,
    Download,
    ExternalLink,
    Mail,
    ArrowRight,
} from "@lucide/astro";
---

<section
    id="home"
    class="relative pt-32 lg:pt-40 pb-20 px-4 md:px-6 overflow-hidden min-h-screen flex items-center bg-[#FDFDFD]"
>
    <div
        class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_50%_0%,rgba(99,102,241,0.05)_0%,transparent_50%)]"
    >
    </div>
    <div
        class="absolute inset-0 -z-10 bg-[linear-gradient(to_right,#80808005_1px,transparent_1px),linear-gradient(to_bottom,#80808005_1px,transparent_1px)] bg-[size:40px_40px]"
    >
    </div>
    <div
        class="absolute inset-0 -z-10 bg-noise opacity-[0.015] pointer-events-none"
    >
    </div>

    <div
        class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16 items-center w-full"
    >
        <!-- Right Content (Profile) - Reordered for Mobile First -->
        <div
            class="lg:col-span-5 flex justify-center items-center order-1 lg:order-2 perspective-1000"
        >
            <div
                class="relative w-[280px] h-[280px] md:w-[420px] md:h-[420px] lg:w-[500px] lg:h-[500px] flex items-center justify-center"
            >
                <div
                    class="absolute w-[80%] h-[80%] bg-indigo-500/10 rounded-full blur-[80px] md:blur-[120px] animate-pulse"
                >
                </div>

                <!-- Floating Glass Rings - Hidden on very small mobile for focus -->
                <div
                    class="absolute w-[100%] h-[100%] border-[2px] border-slate-100/50 rounded-[60px] md:rounded-[100px] rotate-[15deg] animate-[spin_40s_linear_infinite]"
                >
                </div>

                <div
                    class="relative z-10 w-[220px] h-[220px] md:w-[320px] md:h-[320px] lg:w-[380px] lg:h-[380px] rounded-[48px] md:rounded-[84px] p-2 bg-white shadow-2xl border border-slate-100 overflow-hidden transform hover:scale-105 transition-all duration-700"
                >
                    <img
                        src="/yusuf.jpeg"
                        alt="Muhammad Yusuf"
                        class="w-full h-full object-cover rounded-[44px] md:rounded-[78px] grayscale hover:grayscale-0 transition-all duration-[1.5s] ease-out scale-105 hover:scale-100"
                    />
                </div>

                <!-- Floating tech bubbles - scaled for mobile -->
                <div
                    class="absolute -top-2 -right-2 md:-top-6 md:-right-6 p-4 md:p-6 bg-white rounded-2xl md:rounded-[32px] shadow-2xl border border-slate-50 animate-float-1"
                >
                    <img
                        src="https://cdn.simpleicons.org/laravel/FF2D20"
                        class="w-6 h-6 md:w-10 md:h-10"
                        alt="Laravel"
                    />
                </div>
                <div
                    class="absolute -bottom-2 -left-2 md:-bottom-6 md:-left-6 p-4 md:p-6 bg-white rounded-2xl md:rounded-[32px] shadow-2xl border border-slate-50 animate-float-2"
                >
                    <img
                        src="https://cdn.simpleicons.org/tailwindcss/06B6D4"
                        class="w-6 h-6 md:w-10 md:h-10"
                        alt="Tailwind CSS"
                    />
                </div>
            </div>
        </div>

        <!-- Left Content (Text) -->
        <div
            class="lg:col-span-7 space-y-8 lg:space-y-12 order-2 lg:order-1 text-center lg:text-left"
        >
            <div
                class="inline-flex items-center gap-2.5 px-4 py-2 rounded-full bg-white border border-slate-100/80 text-indigo-600 text-[10px] md:text-xs font-black tracking-[0.2em] uppercase animate-fade-in shadow-sm backdrop-blur-sm"
            >
                <span class="relative flex h-2 w-2">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-2 w-2 bg-indigo-600"
                    ></span>
                </span>
                OPEN FOR OPPORTUNITIES
            </div>

            <div class="space-y-6 md:space-y-8">
                <h1
                    class="text-6xl md:text-8xl lg:text-[120px] leading-[0.9] lg:leading-[0.8] font-black font-outfit tracking-tighter text-slate-950"
                >
                    Muhammad
                    <br class="hidden md:block" />
                    <span class="text-indigo-600">Yusuf.</span>
                </h1>

                <div
                    class="flex flex-wrap items-center justify-center lg:justify-start gap-3 md:gap-4 pt-2"
                >
                    <div
                        class="px-4 md:px-6 py-2 md:py-3 bg-slate-900 rounded-xl md:rounded-2xl text-white font-extrabold text-[10px] md:text-[12px] tracking-[0.15em] uppercase shadow-lg shadow-slate-900/10"
                    >
                        Fullstack Engineer
                    </div>
                    <div
                        class="px-4 md:px-6 py-2 md:py-3 border border-slate-200 bg-white rounded-xl md:rounded-2xl text-slate-500 font-extrabold text-[10px] md:text-[12px] tracking-[0.15em] uppercase shadow-sm"
                    >
                        Architect
                    </div>
                </div>

                <p
                    class="text-lg md:text-xl text-slate-500 max-w-xl mx-auto lg:mx-0 leading-relaxed font-medium"
                >
                    Designing and engineering high-impact digital products. I
                    specialize in building <span
                        class="text-slate-900 font-bold border-b-2 border-indigo-100"
                        >scalable architectures</span
                    >.
                </p>
            </div>

            <div
                class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4 md:gap-6 pt-4"
            >
                <a
                    href="#portfolio"
                    class="group relative px-10 py-4 md:py-5 bg-[#234E5E] text-white rounded-[20px] md:rounded-[26px] font-black text-xs uppercase tracking-[0.2em] overflow-hidden transition-all shadow-2xl shadow-[#234E5E]/20"
                >
                    <span
                        class="relative z-10 flex items-center justify-center gap-3"
                    >
                        <span data-en="View Projects" data-id="Lihat Proyek"
                            >View Projects</span
                        >
                        <ArrowRight
                            size={18}
                            class="group-hover:translate-x-1 transition-transform"
                        />
                    </span>
                </a>
                <a
                    href="/cv.pdf"
                    class="px-10 py-4 md:py-5 bg-white text-slate-900 border border-slate-200/80 rounded-[20px] md:rounded-[26px] font-black text-xs uppercase tracking-[0.2em] flex items-center justify-center gap-3 shadow-sm"
                >
                    <span data-en="Resume" data-id="Unduh CV">Resume</span>
                    <Download size={18} />
                </a>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 pt-12 lg:pt-16 border-t border-slate-100/80 max-w-2xl mx-auto lg:mx-0"
            >
                {
                    [
                        { label: "DELIVERED", value: "3+" },
                        { label: "EXP.", value: "2+" },
                        { label: "CLIENTS", value: "98%" },
                        { label: "READY", value: "24/7" },
                    ].map((stat) => (
                        <div class="text-center lg:text-left">
                            <div class="text-2xl md:text-3xl font-black text-slate-900 font-outfit">
                                {stat.value}
                            </div>
                            <div class="text-[8px] md:text-[9px] font-black text-slate-400 tracking-[0.2em] uppercase mt-1">
                                {stat.label}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .bg-noise {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }

    @keyframes float-complex {
        0%,
        100% {
            transform: translate(0, 0) rotate(0deg);
        }
        33% {
            transform: translate(8px, -12px) rotate(2deg);
        }
        66% {
            transform: translate(-5px, -8px) rotate(-1deg);
        }
    }

    .animate-float-1 {
        animation: float-complex 7s ease-in-out infinite;
    }
    .animate-float-2 {
        animation: float-complex 9s ease-in-out infinite 1s;
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-out forwards;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .perspective-1000 {
        perspective: 1000px;
    }
</style>
