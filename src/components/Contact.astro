---
import {
    Mail,
    MessageSquare,
    ArrowRight,
    Instagram,
    Linkedin,
    Github,
} from "@lucide/astro";

const contactMethods = [
    {
        title: "Email",
        desc: "hahayusuf692@gmail.com",
        icon: Mail,
        gradient: "from-indigo-500 to-violet-600",
        accent: "text-indigo-400/80",
        link: "mailto:hahayusuf692@gmail.com",
    },
    {
        title: "WhatsApp",
        desc: "+62 877 8441 5346",
        icon: MessageSquare,
        gradient: "from-emerald-400 to-teal-600",
        accent: "text-emerald-400/80",
        link: "https://wa.me/6287784415346",
    },
];

const socials = [
    { name: "Github", icon: Github, link: "https://github.com/Ysuffl" },
    {
        name: "Linkedin",
        icon: Linkedin,
        link: "https://www.linkedin.com/in/muhammad-yusuf-24892236a",
    },
    {
        name: "Instagram",
        icon: Instagram,
        link: "https://www.instagram.com/hdmmyusuf?igsh=dTk3NHBsM2tsd2d3",
    },
];
---

<section
    id="contact"
    class="py-32 px-6 bg-slate-900 text-white relative overflow-hidden"
>
    <!-- Background Texture -->
    <div
        class="absolute inset-0 -z-10 bg-noise opacity-[0.03] pointer-events-none mix-blend-overlay"
    >
    </div>
    <!-- Modern Glow Background -->
    <div
        class="absolute top-0 right-0 w-1/2 h-full bg-indigo-600/10 blur-[150px] -z-10"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-1/2 h-full bg-purple-600/10 blur-[150px] -z-10"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-center">
            <!-- Left: Text Content -->
            <div class="space-y-10">
                <div class="space-y-6">
                    <span
                        class="text-indigo-400 font-extrabold tracking-[0.4em] uppercase text-xs"
                        >Available for hire</span
                    >
                    <h2
                        class="text-6xl md:text-8xl font-black font-outfit tracking-tighter leading-none"
                    >
                        Let's build <br />
                        <span class="text-indigo-400">the future</span>
                    </h2>
                    <p
                        class="text-slate-400 text-xl font-medium max-w-md !leading-relaxed"
                    >
                        Have a vision? I have the tools to make it a reality.
                        Reach out for a consultation or just to say hi.
                    </p>
                </div>

                <div class="flex flex-col gap-6 max-w-sm">
                    {
                        contactMethods.map((method) => (
                            <a
                                href={method.link}
                                class="group flex items-center gap-6 p-2 pr-8 rounded-[32px] bg-slate-800/40 border border-slate-700/50 hover:bg-slate-800/60 hover:border-indigo-500/50 hover:shadow-2xl hover:shadow-indigo-500/10 transition-all duration-500"
                            >
                                <div
                                    class={`shrink-0 w-16 h-16 bg-gradient-to-br ${method.gradient} rounded-[24px] flex items-center justify-center shadow-xl shadow-black/20 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500`}
                                >
                                    <method.icon
                                        size={28}
                                        stroke-width="2.5"
                                        class="text-white drop-shadow-md"
                                    />
                                </div>
                                <div class="flex flex-col gap-1">
                                    <span
                                        class={`text-[11px] font-bold uppercase tracking-[0.2em] ${method.accent}`}
                                    >
                                        {method.title}
                                    </span>
                                    <span class="text-lg font-bold text-slate-100 group-hover:text-white transition-colors">
                                        {method.desc}
                                    </span>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Right: Big Footer-like Info -->
            <div
                class="bg-indigo-600 rounded-[56px] p-12 lg:p-20 text-center lg:text-left shadow-2xl shadow-indigo-600/20"
            >
                <h3 class="text-3xl font-black mb-8">Ready to start?</h3>
                <div class="space-y-12">
                    <div class="space-y-2">
                        <p
                            class="text-indigo-100 text-sm font-bold uppercase tracking-widest"
                        >
                            Connect
                        </p>
                        <div
                            class="flex flex-wrap justify-center lg:justify-start gap-8"
                        >
                            {
                                socials.map((s) => (
                                    <a
                                        href={s.link}
                                        class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center text-white hover:bg-white hover:text-indigo-600 hover:-translate-y-2 transition-all duration-300"
                                        target="_blank"
                                        aria-label={s.name}
                                    >
                                        <s.icon size={28} />
                                    </a>
                                ))
                            }
                        </div>
                    </div>

                    <div class="pt-12 border-t border-white/20">
                        <div
                            class="flex items-center justify-center lg:justify-start gap-4 mb-4"
                        >
                            <div
                                class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center font-black text-indigo-600 text-2xl"
                            >
                                Y
                            </div>
                            <span
                                class="text-2xl font-black font-outfit uppercase"
                                >Muhammad Yusuf</span
                            >
                        </div>
                        <p
                            class="text-indigo-200 text-sm font-bold uppercase tracking-widest"
                        >
                            &copy; {new Date().getFullYear()} All Rights Reserved.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
