---
import {
    ExternalLink,
    Zap,
    Rocket,
    Target,
    Cpu,
    ArrowRight,
    GraduationCap,
    Award,
} from "@lucide/astro";
---

<section id="about" class="py-32 px-6 bg-[#FDFDFD] relative overflow-hidden">
    <!-- Abstract Design Accents -->
    <div
        class="absolute inset-0 -z-10 bg-noise opacity-[0.015] pointer-events-none"
    >
    </div>
    <div
        class="absolute top-1/2 -right-24 w-80 h-80 bg-indigo-50/50 rounded-full blur-[100px] -z-10"
    >
    </div>

    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-24 items-center">
            <!-- Left Side: Editorial Content -->
            <div class="lg:col-span-6 space-y-12">
                <div class="space-y-8">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-[2px] bg-indigo-600 rounded-full">
                        </div>
                        <span
                            class="text-indigo-600 font-black text-xs uppercase tracking-[0.3em]"
                            >Story Behind</span
                        >
                    </div>

                    <h2
                        class="text-5xl md:text-7xl font-black text-slate-900 font-outfit uppercase tracking-tighter leading-[0.9]"
                    >
                        Engineering <br />
                        <span class="text-indigo-600 italic">Brilliance.</span>
                    </h2>

                    <div
                        class="space-y-6 text-slate-500 text-lg font-medium leading-relaxed max-w-xl"
                    >
                        <p>
                            I am <span
                                class="text-slate-900 font-black decoration-indigo-200 decoration-4 underline-offset-4 underline"
                                >Muhammad Yusuf</span
                            >, a Lead Software Engineer based in Indonesia with
                            a obsession for crafting pixel-perfect,
                            high-performance digital experiences.
                        </p>
                        <p>
                            My approach combines deep technical architecture
                            with an aesthetic eye, ensuring that every line of
                            code translates into a seamless, meaningful
                            interaction for the end-user.
                        </p>
                    </div>
                </div>

                <!-- Values Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {
                        [
                            {
                                title: "Philosophy",
                                desc: "Code for the future. Scalable, maintainable, and extremely fast.",
                                icon: Zap,
                            },
                            {
                                title: "Tech Stack",
                                desc: "Cutting-edge tools for cutting-edge problems.",
                                icon: Cpu,
                            },
                        ].map((card) => (
                            <div class="group p-6 rounded-[32px] bg-white border border-slate-100 shadow-sm transition-all hover:shadow-xl hover:shadow-indigo-500/5">
                                <div class="w-12 h-12 bg-slate-900 rounded-2xl flex items-center justify-center text-white mb-6 group-hover:bg-indigo-600 transition-colors">
                                    <card.icon size={22} />
                                </div>
                                <h4 class="font-black text-slate-900 uppercase text-xs tracking-widest mb-2">
                                    {card.title}
                                </h4>
                                <p class="text-slate-400 text-sm font-medium leading-snug">
                                    {card.desc}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Right Side: The Experience "Vault" -->
            <div class="lg:col-span-6">
                <div class="relative group">
                    <!-- Dynamic Glow -->
                    <div
                        class="absolute -inset-6 bg-indigo-600/5 blur-[80px] rounded-[60px] opacity-0 group-hover:opacity-100 transition-opacity duration-1000"
                    >
                    </div>

                    <div
                        class="relative bg-[#1a1c23] rounded-[48px] p-8 md:p-12 shadow-2xl border border-white/5 backdrop-blur-sm"
                    >
                        <!-- Premium Tab Switcher -->
                        <!-- Premium Tab Switcher -->
                        <div class="flex p-1.5 bg-white/5 rounded-2xl mb-12 border border-white/5">
                            <button class="flex-1 py-3 px-4 rounded-xl text-[10px] font-black uppercase tracking-[0.2em] transition-all duration-300 bg-indigo-500/20 text-indigo-400 border border-indigo-500/20 active-tab-btn" data-tab="skills">
                                Skills
                            </button>
                            <button class="flex-1 py-3 px-4 rounded-xl text-[10px] font-black uppercase tracking-[0.2em] transition-all duration-300 text-slate-500 hover:text-slate-300 tab-btn" data-tab="experience">
                                Experience
                            </button>
                            <button class="flex-1 py-3 px-4 rounded-xl text-[10px] font-black uppercase tracking-[0.2em] transition-all duration-300 text-slate-500 hover:text-slate-300 tab-btn" data-tab="education">
                                Education
                            </button>
                        </div>

                        <!-- Tab Contents -->
                        <div class="min-h-[380px]">
                            <!-- Skills Tab -->
                            <div id="skills-content" class="space-y-10 animate-fade-in">
                                <div class="space-y-8">
                                    {[
                                        { name: "Systems Architecture", level: "95%" },
                                        { name: "Modern Frontend", level: "92%" },
                                        { name: "Backend Resilience", level: "88%" },
                                        { name: "Design Systems", level: "90%" }
                                    ].map(skill => (
                                        <div class="space-y-3">
                                            <div class="flex justify-between items-center px-1">
                                                <span class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-200">{skill.name}</span>
                                                <span class="text-[10px] font-black text-slate-400">{skill.level}</span>
                                            </div>
                                            <div class="h-[6px] w-full bg-white/5 rounded-full overflow-hidden">
                                                <div class="h-full bg-emerald-500 rounded-full shadow-[0_0_15px_rgba(16,185,129,0.3)]" style={`width: ${skill.level}`}></div>
                                            </div>
                                        </div>
                                    ))}
                                </div>

                                <!-- Tech Tags -->
                                <div class="flex flex-wrap gap-2.5 pt-8 border-t border-white/5">
                                    {["React", "Vue", "Astro", "Node.js", "Go", "Docker", "AWS", "Figma"].map(tag => (
                                        <span class="px-3.5 py-2 bg-white/5 border border-white/5 rounded-xl text-[9px] font-black uppercase tracking-widest text-slate-400 hover:border-indigo-500/30 transition-colors">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>

                            <!-- Experience Tab -->
                            <div id="experience-content" class="hidden animate-fade-in">
                                <div class="relative pl-8 space-y-12 pb-4">
                                    <!-- Vertical Line -->
                                    <div class="absolute left-0 top-2 bottom-2 w-[1px] bg-white/10"></div>
                                    
                                    {[
                                        { role: "Fullstack Engineer", company: "Genion Team", year: "2025 - Present", active: true },
                                        { role: "Frontend Developer", company: "PT. Multi Raksa Tribrata", year: "2024", active: false },
                                        { role: "IT Support", company: "Freelancer", year: "2022 - 2023", active: false }
                                    ].map(item => (
                                        <div class="relative group/exp">
                                            <!-- Dot -->
                                            <div class={`absolute -left-[35.5px] top-1.5 w-4 h-4 rounded-full border-4 border-slate-900 transition-all duration-500 ${item.active ? 'bg-emerald-500 shadow-[0_0_15px_rgba(16,185,129,0.5)]' : 'bg-slate-700 group-hover/exp:bg-slate-500'}`}></div>
                                            
                                            <div class="space-y-1.5">
                                                <p class={`text-[10px] font-black uppercase tracking-widest ${item.active ? 'text-emerald-500' : 'text-slate-500'}`}>{item.year}</p>
                                                <h4 class="text-white font-black text-xl tracking-tight uppercase transition-colors group-hover/exp:text-indigo-400">{item.role}</h4>
                                                <p class="text-slate-400 text-[11px] font-bold uppercase tracking-widest">{item.company}</p>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>

                            <!-- Education Tab -->
                            <div id="education-content" class="hidden space-y-4 animate-fade-in">
                                {[
                                    { school: "SMK Nurul Islam Jakarta", degree: "Software Engineering", year: "2023 - 2026", icon: GraduationCap },
                                    { school: "Gamelab Indonesia", degree: "Gamelab Certification", year: "2023", icon: Award }
                                ].map(item => (
                                    <div class="group/edu p-6 bg-white/[0.03] border border-white/5 rounded-[32px] flex items-center gap-6 hover:bg-white/[0.05] hover:border-white/10 transition-all duration-300 group">
                                        <div class="w-14 h-14 rounded-2xl bg-white/5 flex items-center justify-center text-slate-400 group-hover/edu:bg-indigo-500/10 group-hover/edu:text-indigo-400 transition-all">
                                            <item.icon size={28} stroke-width="1.5" />
                                        </div>
                                        <div class="space-y-1">
                                            <p class="text-[9px] font-black text-emerald-500/80 uppercase tracking-[0.2em]">{item.year}</p>
                                            <h4 class="text-white font-black text-base uppercase tracking-tight">{item.degree}</h4>
                                            <p class="text-slate-500 text-[10px] font-bold uppercase tracking-widest">{item.school}</p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="mt-12 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center md:items-end gap-10">
                            <a href="#portfolio" class="flex items-center gap-3 text-white font-black text-xs uppercase tracking-widest hover:text-indigo-400 transition-colors group/link pb-2">
                                View Portfolio
                                <ArrowRight size={16} class="group-hover/link:translate-x-1 transition-transform" />
                            </a>
                            
                            <div class="relative max-w-[320px] p-6 bg-white/[0.03] rounded-3xl border border-white/5 italic">
                                <span class="absolute -top-3 left-4 text-indigo-500/40 text-4xl">"</span>
                                <p class="text-slate-400 text-[10px] leading-relaxed relative z-10 font-medium">
                                    Jangan pernah merasa tertinggal, Setiap orang punya Proses dan rezeki Nya masing masing.
                                </p>
                            </div>
                        </div>
        </div>
    </div>
</section>

<script>
    const tabBtns = document.querySelectorAll("[data-tab]");
    const contents: Record<string, HTMLElement | null> = {
        skills: document.getElementById("skills-content"),
        experience: document.getElementById("experience-content"),
        education: document.getElementById("education-content"),
    };

    tabBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            const tabId = btn.getAttribute("data-tab");
            if (!tabId) return;

            // Update buttons style
            tabBtns.forEach((b) => {
                b.classList.remove(
                    "bg-indigo-500/20",
                    "text-indigo-400",
                    "border-indigo-500/20",
                );
                b.classList.add("text-slate-500");
            });
            btn.classList.add(
                "bg-indigo-500/20",
                "text-indigo-400",
                "border-indigo-500/20",
            );
            btn.classList.remove("text-slate-500");

            // Toggle contents
            Object.keys(contents).forEach((key) => {
                const content = contents[key];
                if (content) {
                    if (key === tabId) {
                        content.classList.remove("hidden");
                    } else {
                        content.classList.add("hidden");
                    }
                }
            });
        });
    });
</script>

<style>
    .animate-fade-in {
        animation: fadeIn 0.4s ease-out forwards;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
